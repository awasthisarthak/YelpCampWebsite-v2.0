<%- include ("../partials/header") %>
<div class="row justify-content-center">
    <div class="col-md-12 text-center">
        <h1>Edit <%=campground.name%></h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT", method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.name%>" name="campground[name]" id="">
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="campground[price]" value="<%=campground.price%>" min="0.01" step="0.01">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]" id="">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.description%>" name="campground[description]" id="">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block">Submit!</button>
            </div>                
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>  
</div>

<%- include ("../partials/footer") %>